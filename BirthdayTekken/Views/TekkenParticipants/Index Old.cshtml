@model IEnumerable<BirthdayTekken.Models.Participant>

@{
    ViewData["Title"] = "Index";
}

<h1>Participants</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="First().ProfilePictureURL"></label>
            </th>
            <th>
                <label asp-for="First().Name"></label>
            </th>
            <th>
                  <label asp-for="First().Surname"></label>

            </th>
            <th>
                  <label asp-for="First().Champion"></label>

            </th>
            <th>
                  <label asp-for="First().TournamentsWon"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ProfilePictureURL
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Surname
                </td>
                <td>
                    @item.Champion
                </td>
                <td>
                    @item.TournamentsWon
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
