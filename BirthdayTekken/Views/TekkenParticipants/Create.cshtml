@using BirthdayTekken.Enums
@model BirthdayTekken.Models.Participants

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Participants</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Champion" class="control-label"></label>
                <select asp-for="Champion" asp-items="Html.GetEnumSelectList<Champion>()" class="form-control">
                    <option selected="selected" value="">Choose your champion!</option>
                    </select>
                <span asp-validation-for="Champion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TournamentsWon" class="control-label"></label>
                <input asp-for="TournamentsWon" class="form-control" />
                <span asp-validation-for="TournamentsWon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
