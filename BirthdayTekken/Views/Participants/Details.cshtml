@model Participant

@{
    ViewData["Title"] = "List of Participants";
}

<div class="row">

                    <div class="col-md-4 col-xs-6 border-primary mb-3">
                            <div class="card mb-3" style="max-width: 540px;">
                            <div class="row g-0">
                                <div class="col-md-12">
                                    <div class="card-header text-white" style="background-color:blueviolet"  >
                                        <p class="card-text">
                                            <h5 class="card-title">
                                                @Model.Name
                                            </h5>
                                        </p>
                                    </div>
                                </div>
                            <div class="form-group text-center">
    <img id="ProfilePicturePreview" class="border-info rounder-circle"
         style="max-width: 150px"
         src="@Url.Action("GetImage", "Participants", new { id = Model.Id })" />
</div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                                <p class="card-text"><b>Name: </b>@Model.Name</p>
                                                <p class="card-text"><b>Surname: </b>@Model.Surname</p>
                                                <p class="card-text"><b>Favorite Champion: </b>@Model.Champion</p>
                                                <p class="card-text"><b>Tournaments Won: </b>@Model.TournamentsWon</p>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="card-footer ">
                                        <p class="card-text">
                                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil-square"></i>Edit </a>
                                            <a class="btn btn-danger text-white float-end" asp-action="Delete" asp-route-id="@Model.Id"><i class="bi bi-trash"></i>Delete </a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
</div>
<div style="position: fixed; right: 25px; bottom: 25px" class="text white">
    <a asp-controller="TekkenParticipants" asp-action="Create" class="btn btn-success">
    <i class="bi-bi plus circle"></i>Add New</a>
</div>