<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card mb-12">
            <!-- ... -->
            <div class="card-body">
                <!-- ... -->
                <form method="post" asp-action="CreateNextRound" asp-controller="Tournament">
                    <div class="d-flex justify-content-around flex-wrap">
                        @foreach (var match in Model.Matches)
                        {
                            <div class="card text-center mb-4">
                                <div class="card-body">
                                    <h5 class="card-title">Round @match.RoundNumber</h5>
                                    <ul class="list-group list-group-flush">
                                        @for (var i = 0; i < match.ParticipantsIds.Count; i++)
                                        {
                                            <li class="list-group-item">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="@("winner-" + match.Id)" value="@match.ParticipantsIds[i]">
                                                    <label class="form-check-label">@match.ParticipantNames[i]</label>
                                                </div>
                                            </li>
                                        }
                                    }
                                </ul>
                            </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer text-center">
                        <button type="submit" class="btn btn-primary">Submit Winners</button>
                    </div>
                </form>
            </div>
            <!-- ... -->
        </div>
    </div>
</div>
