@model TournamentMatchesViewModel

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card mb-12">
            <div class="card-body">
                <form method="post" asp-action="CreateNextRound" asp-controller="Match">
                    <input asp-for="@Model.SelectedTournamentId" type="hidden" />
                    <input asp-for="@Model.RoundNumber" type="hidden" />
                    @for (int i = 0; i < Model.Matches.Count; i++)
                    {
                        <div class="card text-center mb-4">
                            <div class="card-body">
                                <h5 class="card-title">Match @Model.Matches[i].Id</h5>
                                <ul class="list-group list-group-flush">
                                    @for (var j = 0; j < Model.Matches[i].ParticipantsIds.Count; j++)
                                    {
                                        <li class="list-group-item">
                                            <div class="form-check">
                                                <input asp-for="@Model.Winners[i].WinnerId" class="form-check-input" type="radio" name="@($"Winners[{i}].WinnerId")" value="@Model.Matches[i].ParticipantsIds[j]">
                                                <label class="form-check-label">@Model.Matches[i].ParticipantNames[j]</label>
                                                <input asp-for="@Model.Winners[i].MatchId" type="hidden" value="@Model.Matches[i].Id" />
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                    <div class="card-footer text-center">
                        <button type="submit" class="btn btn-primary">Submit Winners</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
