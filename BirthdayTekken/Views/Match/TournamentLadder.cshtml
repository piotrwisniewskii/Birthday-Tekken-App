@using BirthdayTekken.Models.ViewModel;
@model TournamentMatchesViewModel

@{
    ViewBag.Title = "Tournament Ladder";
}

<h2>Tournament Ladder</h2>

<form asp-action="SelectedTournemantWithMatches" method="post">
    <div>
        <label for="SelectedTournamentId">Select a tournament:</label>
        <select id="SelectedTournamentId" name="selectedTournamentId" asp-items="@Model.TournamentList">
            <option value="">-- Select a Tournament --</option>
        </select>
    </div>
    <div>
        <input type="submit" value="Show Matches" />
    </div>

     <div class="card-footer ">
       <p class="card-text">
         <a class="btn btn-outline-primary " asp-action="Index"><i class="bi bi-eye"></i> Delete Matches</a>
       </p>
     </div>
</form>


