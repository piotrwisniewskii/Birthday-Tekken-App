@model List<Match>

@{
    ViewData["Title"] = "Matches";
}

<h1>Matches</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Participants</th>
            <th>Winner</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var match in Model)
        {
            <tr>
                <td>@match.Id</td>
                <td>
                    <ul>
                        @foreach (var participantMatch in match.Participant_Matches)
                        {
                            <li>@participantMatch.Participant.Name</li>
                        }
                    </ul>
                </td>
                <td>
                    <!-- Add action links as needed, e.g., Edit, Details, Delete -->
                    <a asp-action="Edit" asp-route-id="@match.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@match.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@match.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Add a link to create a new match -->
<a asp-action="AddRandomMatch">Create New Match</a>
