@model IEnumerable<Match>

@{
    ViewData["Title"] = "List of Matches";
}

<div class ="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                 <tr>
                     <th><label asp-for="First().Id"></label></th>
                     <th><label asp-for="First().WinnerId"></label></th>
                     <th>Actions</th>
                 </tr>
            </thead>
        <tbody>
                @foreach (var item in Model)
                {
                        <tr>

                            <td class="allign-middle">
                            @item.Id
                            </td>
                            <td class="allign-middle">
                            @item.WinnerId
                            </td>
                            <td class="allign middle">
                                <a class="btn btn-outline-primary text-black" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a> |
                                <a class="btn btn-outline-info text-black"    asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a> |
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                            </td>
                       </tr>
                }
         </tbody>
        </table>
    </div>
</div>


<form asp-controller="Match" asp-action="AddRandomMatch" method="post">
    <input type="submit" value="Create Random Match" />
</form>