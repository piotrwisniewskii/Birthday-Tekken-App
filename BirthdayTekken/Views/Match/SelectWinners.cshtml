@using BirthdayTekken.Models.ViewModel;
@model List<NewMatchVm>

<h2>Select Winners for Round @ViewBag.RoundNumber</h2>

@using (Html.BeginForm("CreateNextRound", "Match"))
{
    <table>
        <thead>
            <tr>
                <th>Match Id</th>
                <th>Participant 1</th>
                <th>Participant 2</th>
                <th>Winner</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var match = Model[i];
                <tr>
                    <td>@match.MatchId</td>
                    <td>@match.ParticipantNames[0]</td>
                    <td>@match.ParticipantNames[1]</td>
                    <td>
                        <input type="hidden" name="winners[@i].MatchId" value="@match.MatchId" />
                        <select name="winners[@i].WinnerId">
                            <option value="">-- Select Winner --</option>
                            <option value="@match.ParticipantsIds[0]">@match.ParticipantNames[0]</option>
                            <option value="@match.ParticipantsIds[1]">@match.ParticipantNames[1]</option>
                        </select>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Create Next Round" />
}
