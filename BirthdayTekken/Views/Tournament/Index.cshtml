@model IEnumerable<BirthdayTekken.Models.Tournament>

@{
    ViewData["Title"] = "Tournament";
}

<h1>Tournament</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="First().TournamentDate"></label>
            </th>
            <th>
                <label asp-for="First().PlayersNumber"></label>
            </th>
             <th>
                <label asp-for="First().Winner"></label>
            </th>
            <th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.TournamentDate
                </td>
                <td>
                    @item.PlayersNumber
                </td>
                       <td>
                    @item.Winner
                    </td>
                <td>
                       <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
