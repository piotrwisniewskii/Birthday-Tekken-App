@using BirthdayTekken.Models.ViewModel
@model TournamentViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tournament</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TournamentModel.TournamentDate" class="control-label"></label>
                <input asp-for="TournamentModel.TournamentDate" class="form-control" />
                <span asp-validation-for="TournamentModel.TournamentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TournamentModel.PlayersNumber" class="control-label"></label>
                <input asp-for="TournamentModel.PlayersNumber" class="form-control" />
                <span asp-validation-for="TournamentModel.PlayersNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TournamentModel.WinnerId" class="control-label"></label>
                    <div class="button">
                        <select asp-for="TournamentModel.WinnerId" asp-items="@(new SelectList(Model.Participants, nameof(Participant.Id), nameof(Participant.Surname)))">
                            <option selected="selected" value="">Choose Tournament winner</option>
                        </select>
                        <span asp-validation-for="TournamentModel.WinnerId" class="text-danger"></span>
                    </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
